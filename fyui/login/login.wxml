<import src="../../resource/template/commonInputShow.wxml" />
<view>
  <form bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title">

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">用户名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入用户名" name="username" value="{{userInfo.username}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">密码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入密码" name="password" value="{{userInfo.password}}" type="password" />
        </view>
      </view>
    </view>
    <view class="weui-btn-area">
      <button type="primary" form-type="submit">登 录</button>
    </view>
  </form>
</view>