/*******************************增减商品数量公共样式************************************/

/*主容器*/

.stepper {
  width: 110px;
  height: 36px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
  margin-right: 40rpx;
  float: right;
}

/*加号和减号*/

.stepper text {
  width: 29px;
  line-height: 36px;
  text-align: center;
  float: left;
  font-size: 16px;
}

/*数值*/

.stepper input {
  width: 50px;
  height: 36px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 16px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*价格样式*/

.price {
  color: red;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}
